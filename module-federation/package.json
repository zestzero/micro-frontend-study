{
  "name": "module-federation-workspace",
  "version": "1.0.0",
  "description": "Module Federation Micro-Frontend Application",
  "private": true,
  "workspaces": [
    "design-system",
    "shell",
    "module-1",
    "module-2",
    "module-3"
  ],
  "scripts": {
    "install-all": "npm install",
    "build:design-system": "cd design-system && npm run build",
    "build:shell": "cd shell && npm run build",
    "build:module-1": "cd module-1 && npm run build",
    "build:module-2": "cd module-2 && npm run build",
    "build:module-3": "cd module-3 && npm run build",
    "build:all": "npm run build:design-system && npm run build:module-1 && npm run build:module-2 && npm run build:module-3 && npm run build:shell",
    "start:shell": "cd shell && npm start",
    "start:module-1": "cd module-1 && npm start",
    "start:module-2": "cd module-2 && npm start",
    "start:module-3": "cd module-3 && npm start"
  }
}
